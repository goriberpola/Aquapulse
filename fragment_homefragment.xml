<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragment"


    >


    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:progress="60"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/text_view_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60%"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="@+id/progress_bar"
        app:layout_constraintVertical_bias="0.477"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="90dp"
        />


    <Button
        android:id="@+id/button_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="160dp"
        />

    <Button
        android:id="@+id/button_inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="300dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not drink water "
        android:textSize="18dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="175dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="immediately after eating."
        android:textSize="18dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="175dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ml"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="309dp"
        android:layout_marginLeft="290dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2530"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="190dp"/>




    <ImageView
        android:layout_width="164dp"
        android:layout_height="159dp"
        android:src="@drawable/drinkman"

        android:layout_marginTop="35dp"
        android:layout_marginLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's records +"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="545dp"
        />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="24dp"/>


</RelativeLayout>